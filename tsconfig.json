{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"types": ["node"],
		"resolveJsonModule": true,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
	},
	"include": ["./**/*.ts"],
  	"exclude": ["node_modules", "test", "dist"]
}
